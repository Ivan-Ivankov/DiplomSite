<section class="documents">
  <div class="menu">
    <ul>
      <a href="/about/company"><li>О компании</li></a>
      <a href="/about/news"><li>Новости</li></a>
      <a href="/about/contacts"><li>Контакты</li></a>
      <a href="/about/documents"><li>Документы</li></a>
    </ul>
  </div>
  <div class="documents-content">
    <h2>Доступные документы</h2>
    <div class="documents-list fs18">
      <% docs.forEach((elem) => { if (elem.fileType === "public") {%>
      <div class="doc">
        <p><%= elem.fileName %></p>
        <a
          class="btn fs18"
          href="/public/uploads/<%= elem.fileType %>/<%= elem.fileName %>"
          download
          >Скачать</a
        >
      </div>
      <% }}) %>
    </div>
  </div>
</section>
